{
    "file_scan_exclusions": [
        "**/.git",
        "**/Thumbs.dn",
        "**/.vscode",
        "**/__pycache__",
        "**/.mypy_cache",
        "**/.pytest_cache",
        "**/.ruff_cache",
        "**/.ropeproject"
    ],
    "auto_install_extensions": {
        "toml": true,
        "typos": true,
        "ruff": true,
        "mcp-server-github": true,
        "mcp-server-context7": true
    },
    "terminal": {
        "detect_venv": {
            "on": {
                "directories": [".venv"]
            }
        }
    }
}
